@model ws.web.eng.Models.UsuarioModel
@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("User", "Manager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Model.Id)
    <h2>Usuário</h2>
    <p class="text-warning">@ViewBag.Message</p>
    
    <fieldset>
        <legend>Nosso Formulário</legend>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">  
                    @Html.LabelFor(x => x.NomeUsuario)
                    @Html.TextBoxFor(x => x.NomeUsuario, new { @class = "form-control", maxlength = "8" })
                    @Html.ValidationMessageFor(m => m.NomeUsuario, null, new { @class = "text-warning"})
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.NomeCompleto)
                    @Html.TextBoxFor(x => x.NomeCompleto, new { @class = "form-control", maxlength = "150" })
                    @Html.ValidationMessageFor(m => m.NomeCompleto, null, new { @class = "text-warning" })
                </div>
            </div>  
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Categorias)
                    @Html.DropDownListFor(x => x.CategoriaID, Model.Categorias, "Selecione uma categoria", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoriaID, null, new { @class = "text-warning" })
                </div>
            </div>
        </div>        
    </fieldset>

    <div class="row text-center">
        <br />
        <input type="submit" value="Confirmar" class="btn btn-primary" />
        <a class="btn btn-primary" href="@Url.Action("UserList")" role="button">Cancelar</a>

    </div>

    
}



