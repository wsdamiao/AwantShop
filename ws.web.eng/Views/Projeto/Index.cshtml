@model ws.web.eng.Models.ProjetoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Projeto", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <script type="text/javascript">
        function slideonlyone(thechosenone) {
            $('.table-active').each(function (index) {
                if ($(this).attr("id") == thechosenone) {
                    $(this).slideDown(20);
                }
                else {
                    $(this).slideUp(200);
                }
            });
        }
    </script>

    <br />
    <div class="row">
        <div class="has-error">
            @ViewBag.Message
        </div>
    </div>
    <br />
    <div class="h1">Meus projetos</div>
    <table class="table">
        <caption>Administre aqui os seus projetos</caption>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">País</th>
                <th scope="col">Tipo de Projeto</th>
                <th scope="col">Descrição</th>
                <th scope="col">Valor</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model.ProjetosTela)
                {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Regiao</td>
                <td>@item.TipoProj</td>
                <td>@item.DescrProj</td>
                <td>@item.Valor</td>
                <td>@item.Status</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Opções
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                @if (item.Servicos != null)
                                {
                                    <a class="dropdown-item" href="javascript:slideonlyone('det_@item.Id');">Serviços</a>
                                }
                                <a class="dropdown-item" href="@Url.Action("Cancelar", "Dashboard", new { id = int.Parse(item.Id) })">Solicitar Cancelamento</a>
                                <a class="dropdown-item" href="@Url.Action("Servicos", "Home", new { id = int.Parse(item.Id) })">Adicionar Novo Serviço</a>
                                <a class="dropdown-item" href="@Url.Action("Acompanhar", "Projeto", new { id = int.Parse(item.Id) })">Acompanhamento</a>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
                <tr id="det_@item.Id" class="table-active" style="display:none;">
                    <td colspan="6">
                        <table class="table table-bordered table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">Serviço</th>
                                    <th scope="col">Valor</th>
                                    <th scope="col">Data</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (item.Servicos != null)
                                {
                                    foreach (var subItem in item.Servicos)
                                    {
                                <tr>
                                    <td>@subItem.Servico</td>
                                    <td>@subItem.Valor</td>
                                    <td>@subItem.Data</td>
                                    <td>@subItem.Status</td> 
                                    <td><a href="@Url.Action("Acompanhar", "Projeto", new { id = int.Parse(item.Id) })">Acompanhar</a></td>                                    
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>

}

