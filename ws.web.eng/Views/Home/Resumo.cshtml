@using ws.eng.obj
@model ws.web.eng.Models.ProjetoModel
@{
    ViewBag.Title = "Resumo Final";
}

@using (Html.BeginForm("Resumo", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("idRegiao", (int)Model.Regiao)
    @Html.Hidden("CodMunicipio", Model.CodMunicipio)
    @Html.Hidden("CidadeID", Model.CidadeID)
    @Html.Hidden("idProjeto", (int)Model.Projeto)
    @Html.Hidden("idArea", (int)Model.Area)
    @Html.Hidden("idPadrao", (int)Model.PadraoAcabamento)
    @Html.Hidden("PA", (bool)Model.ProjetoArquitetonico)
    @Html.Hidden("PHS", (bool)Model.ProjetoHidraSanitario)
    @Html.Hidden("PE", (bool)Model.ProjetoEletrico)
    @Html.Hidden("ValorProjetoArquitetonico", Model.ValorProjetoArquitetonico)
    @Html.Hidden("ValorProjetoEletrico", Model.ValorProjetoEletrico)
    @Html.Hidden("ValorProjetoHidroSanitario", Model.ValorProjetoHidroSanitario)
    @Html.Hidden("ValorProjetoExecutivo", Model.ValorProjetoExecutivo)

    @Html.Hidden("CpfCnpj", Model.CpfCnpj)
    @Html.Hidden("Nome", Model.Nome)
    @Html.Hidden("TelContato1", Model.TelContato1)
    @Html.Hidden("TelContato2", Model.TelContato2)
    @Html.Hidden("TelContato3", Model.TelContato3)
    @Html.Hidden("TextoLivre", Model.TextoLivre)
    @Html.Hidden("Email", Model.Email)
    <br />
    <div class="row">
        <div class="has-error">
            @ViewBag.Message
        </div>
    </div>
    <br />
    <div class="row">
        <h2>Resumo do <span style="color:red;">Projeto</span></h2>
    </div>
    <fieldset>
        <legend>Dados do Projeto</legend>
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(x => x.Regiao)
                @EnumObj.GetEnumDescription(Model.Regiao)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(x => x.Projeto)
                @EnumObj.GetEnumDescription(Model.Projeto)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(x => x.Area)
                @EnumObj.GetEnumDescription(Model.Area)
            </div>
            <div class="col-md-3">
                @Html.LabelFor(x => x.PadraoAcabamento)
                @EnumObj.GetEnumDescription(Model.PadraoAcabamento)
            </div>
        </div>
    </fieldset>
    <br />
    <fieldset>
        <legend>Resumo Financeiro</legend>
        <div class="row">
            @if (Model.ProjetoArquitetonico)
                {
                <div class="col-md-3">
                    <b>Projeto Arquitetônico:</b>
                </div>
                <div class="col-md-3">
                    @Model.ValorProjetoArquitetonicoFormatado
                </div>
            }
            <div class="col-md-3">
                <b>Total:</b>
            </div>
            <div class="col-md-3">
                @Model.ValorProjetoTotalFormatado
            </div>
        </div>
        <div class="row">
            @if (Model.ProjetoEletrico)
            {
                <div class="col-md-3">
                    <b>Projeto Elétrico: </b>
                </div>
                <div class="col-md-3">
                    @Model.ValorProjetoEletricoFormatado
                </div>
            }
        </div>
        <div class="row">
            @if (Model.ProjetoHidraSanitario)
            {
                <div class="col-md-3">
                    <b>Projeto Hidraulico/ Sanitário:</b>
                </div>
                <div class="col-md-3">
                    @Model.ValorProjetoHidroSanitarioFormatado
                </div>
            }
        </div>
        <div class="row">
            @if (Model.ProjetoExecutivo)
            {
                <div class="col-md-3">
                    <b>Projeto Executivo:</b>
                </div>
                <div class="col-md-3">
                    @Model.ValorProjetoExecutivoFormatado
                </div>
            }
        </div>

    </fieldset>
    <br />
    <fieldset>
        <legend>Seus Dados</legend>
        <div class="row">
            <div class="col-md-3">
                <b>CPF/CNPJ</b>
            </div>
            <div class="col-md-3">                
                @Model.CpfCnpj
            </div>
            <div class="col-md-3">
               <b>Nome</b>
            </div>
            <div class="col-md-3">
                @Model.Nome
            </div>
            
        </div>
        <div class="row">            
            <div class="col-md-3">
             <b>E-Mail</b>
            </div>
            <div class="col-md-9">
               @Model.Email
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>Telefones de Contato</b>                
            </div>
            <div class="col-md-9">                
                @Model.TelContato1
                @if(Model.TelContato2 != null)
                {
                    <span> / @Model.TelContato2</span>
                }
                @if (Model.TelContato3 != null)
                {
                    <span> / @Model.TelContato3</span>
                }
            </div>           
        </div>
        <div class="row">
            <div class="col-md-3">
                <b>Informações Complementares</b>                
            </div>
            <div class="col-md-9">                
                @Model.TextoLivre
            </div>
        </div>
    </fieldset>
    <br />

    <div class="row text-center">
        <input type="submit" value="voltar" name="BT_VOLTAR" class="btn btn-primary" />
        <input type="submit" value="Enviar seu Projeto" name="BT_PROX" class="btn btn-primary" />
    </div>
}
