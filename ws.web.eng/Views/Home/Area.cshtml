            <input type="submit" value="" name="BT_P" class="btt_P" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="" name="BT_M" class="btt_M" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="" name="BT_G" class="btt_G" />
        </div>
